generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  username   String     @unique
  email      String     @unique
  password   String
  permission Permission @default(Visualizador)

  @@map("users")
}

enum Permission {
  Admin
  Colaborador
  Visualizador
}
